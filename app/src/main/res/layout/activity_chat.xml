<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F0DF"
        tools:context=".ChatActivity">

        <!-- Barra superior con íconos de acciones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="#A91A34">

            <ImageView
                android:id="@+id/btnAtras"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                android:tint="@android:color/white"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:id="@+id/btnLike"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_like"
                android:tint="@android:color/white"
                android:layout_marginLeft="auto"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:id="@+id/btnConfig"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_settings"
                android:tint="@android:color/white"/>
        </LinearLayout>

        <!-- Mensajes de chat (simulación de mensajes de ejemplo) -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/llInputContainer"
            android:layout_below="@+id/llHeader"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Mensaje recibido -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="#FFFFFF"
                    android:elevation="4dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="60dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Claro, cuéntame cómo fue tu día..."
                        android:textColor="#000000" />
                </LinearLayout>

                <!-- Mensaje enviado -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="#FFB77D"
                    android:elevation="4dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="60dp"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hola"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- Contenedor de entrada de texto -->
        <LinearLayout
            android:id="@+id/llInputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:background="#A91A34">

            <!-- Campo de texto para el mensaje -->
            <EditText
                android:id="@+id/etMensaje"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Escribe tu mensaje..."
                android:backgroundTint="#FFFFFF"
                android:textColorHint="#F7F0DF"
                android:textColor="@android:color/black"
                android:padding="10dp"/>

            <!-- Botón de envío -->
            <ImageButton
                android:id="@+id/btnEnviar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_send"
                android:background="@android:color/transparent"
                android:tint="#FFFFFF"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>